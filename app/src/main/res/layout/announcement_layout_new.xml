<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_message_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                 app:srcCompat="@drawable/ic_account_circle_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical">

                <!--<TextView-->
                <!--android:id="@+id/username"-->
                <!--android:visibility="gone"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginStart="10dp"-->
                <!--android:text="@string/user"-->
                <!--android:textColor="@color/White" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:paddingEnd="5dp">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="@string/user"
                        android:textColor="@color/White" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:drawablePadding="3dp"

                        android:text="timessssss"
                        android:textColor="@color/White" />

                    <TextView
                        android:id="@+id/collegeid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:paddingRight="5dp"
                        android:text="cs1787"
                        android:textColor="@color/White"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:text="contact"
                        android:textColor="@color/White"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#fff"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/announcementHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/nav_header_desc"
                    android:textAlignment="center"
                    android:textColor="@color/Black" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/messagebody"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:text="jsldjfljsjf jsjfs jsjflsd sdjflsf sjflsjf jsfljsf jsfljslf jsljfs fsjfljslfj sfljsfl sjflsjfl jflsjfl lsjflsjfl" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="start|center"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/attachFile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/attachment" />

            <TextView
                android:id="@+id/announcementMoreBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                 android:gravity="center"
                android:paddingBottom="5dp"

                android:text="Details"

                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>