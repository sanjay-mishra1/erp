<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mainRelative"
    android:layout_height="match_parent"
    android:background="#000">


    <ImageView
        android:id="@+id/imageId"
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:layout_centerVertical="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
    android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:onClick="backtomessage"
             app:srcCompat="@drawable/back" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
             android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
<ImageView
    android:layout_width="50dp"
     android:layout_gravity="end"
      android:layout_height="30dp"
    android:id="@+id/crop"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_marginEnd="10dp"
             android:layout_height="30dp"
            android:id="@+id/rotate"
            android:layout_marginRight="10dp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#aa000000">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="75dp"
                android:layout_marginRight="75dp"
                 android:hint="@string/add_a_caption"
                android:inputType="textMultiLine"
                android:maxHeight="100dp"
                android:maxLines="4"
                android:paddingLeft="10dp"
                android:id="@+id/ImageCaption"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:textColor="#fff"
                android:textColorHint="#8bffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:id="@+id/send"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:onClick="Onclick_storeToFirebase"
            android:background="@drawable/cerclebackgroundpink"
            android:contentDescription="@string/send"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_send_black_24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/cropRelative"
        android:visibility="gone"
        android:background="#77000000"
        android:layout_height="match_parent">

    />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#77000000"
        android:id="@+id/progressRelative"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </RelativeLayout>

</RelativeLayout>