<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LoginTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newmitedit2"

     android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:gravity="center"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:transitionName="malwaIcon"

               android:layout_height="100dp"
            app:srcCompat="@drawable/applogo" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Malwa Institute Of Technology Indore"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" />
    </LinearLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_gravity="bottom"
       android:layout_marginBottom="50dp"
       android:layout_alignParentBottom="true"
       android:layout_height="wrap_content">
       <!--style="@android:style/Widget.Material.Light.Button.Inset"-->

       <Button
           android:layout_width="165dp"
           android:layout_height="wrap_content"
           android:drawableStart="@drawable/teacher"
           android:drawableTint="@color/Black"
           android:elevation="10dp"
            android:layout_marginStart="5dp"
           android:onClick="staffclicked"
           android:pointerIcon="zoom_in"
           android:text="Staff" />

       <Button
           android:layout_width="165dp"
           android:layout_height="50dp"
           android:drawableLeft="@drawable/user"
           android:drawableTint="#FF666666"
           android:elevation="10dp"
           android:layout_marginEnd="5dp"
           android:layout_alignParentEnd="true"

            android:layout_gravity="end"
           android:onClick="studentclicked"
           android:pointerIcon="zoom_in"
           android:text="Student" />
   </RelativeLayout>

</RelativeLayout>