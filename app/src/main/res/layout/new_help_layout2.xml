<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:id="@+id/helpConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    android:fitsSystemWindows="true"
    >
<ImageView
    android:layout_width="200dp"
    android:id="@+id/no_messages"
    android:layout_height="200dp"
    android:visibility="gone"
    android:layout_gravity="center_vertical|center_horizontal"
    android:src="@drawable/no_messages_found"
    />
    <RelativeLayout
        android:id="@+id/progressbar"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_alignParentTop="true"
         android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/end"
                    style="@android:style/Widget.Holo.Light.ImageButton"
                    android:layout_width="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="150dp"
                    android:layout_marginRight="1dp"
                    android:background="#00ffffff"
                      android:paddingLeft="0dp"
                    android:tint="@color/White"
                    android:layout_gravity="center"
                     app:srcCompat="@drawable/back"
                    android:paddingEnd="12dp"
                    android:layout_centerVertical="true"
                    android:paddingRight="12dp"
                    android:paddingStart="0dp" />

                <ImageView
                    android:id="@+id/mainimage"
                     android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:transitionName="user_image"
                    android:background="@drawable/circle_img"
                     android:layout_marginStart="-150dp"
                     android:layout_toEndOf="@id/end"
                    android:layout_marginLeft="-150dp" />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="5dp"
                   android:layout_centerVertical="true"
                   android:layout_toEndOf="@id/mainimage"
                   android:paddingEnd="36dp"
                    android:layout_gravity="center_vertical"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/toolbar"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:lines="1"

                         android:textColor="#fff"
                       android:textSize="18sp" />

                   <TextView
                       android:id="@+id/lastseen"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="14sp"
                       android:textColor="#fff"
                       android:visibility="gone" />
               </LinearLayout>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/menu"
                android:layout_marginEnd="5dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/triple_dot"
                />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/reyclerview_message_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbar"
            android:layout_marginBottom="11dp"
            android:layout_above="@id/relative"
            android:background="#00ffffff">

        </android.support.v7.widget.RecyclerView>
        <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
         android:background="#00ffffff">


        <!-- A horizontal line between the chatbox and RecyclerView -->
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/layout_chatbox"
            android:layout_marginBottom="0dp"
            android:background="#dfdfdf" />

        <LinearLayout
            android:id="@+id/layout_chatbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="vertical"

            >

            <android.support.v7.widget.CardView
                android:id="@+id/imageCard"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_above="@id/card_view"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progressbarsmall"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="1" />

                    <ImageView
                        android:id="@+id/messageImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                       />

                    <TextView
                        android:id="@+id/imageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:text="Sending" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/cancel_message"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:tint="@color/Black"
                    app:srcCompat="@drawable/cancel" />
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_chatbox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/chat_body"
                android:maxWidth="12dp"
                android:minHeight="58dp"
                android:visibility="gone"
                android:orientation="horizontal">

            <EditText
                android:id="@+id/edittext_chatbox"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="16dp"

                android:layout_marginStart="27dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/say_something"
                android:maxLines="4" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/button_send_message"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginRight="2dp"
                    android:scaleType="centerInside"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/sebd_background"
                    app:srcCompat="@drawable/add_color"
                     android:layout_marginEnd="2dp" />

                <RelativeLayout
                    android:id="@+id/progressRelative"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/sebd_background"
                    android:visibility="gone">

                    <ProgressBar
                        style="@android:style/Widget.ProgressBar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="false" />
                </RelativeLayout>

            </RelativeLayout>
            </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
         android:elevation="3dp"

        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/color"

            android:layout_width="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"

                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relateCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >

                    <ImageButton
                        android:id="@+id/camera"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:tint="@color/White"
                        android:background="@drawable/circular_two_colors_one"
                        app:srcCompat="@drawable/camera" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/camera"
                        android:layout_marginTop="5dp"
                        android:text="Camera" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relateGallery"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp">

                    <ImageButton
                        android:id="@+id/gallery"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circular_two_colors"
                        app:srcCompat="@drawable/gallery" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gallery"

                        android:layout_marginTop="5dp"
                        android:text="Gallery" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relateOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp">

                    <ImageButton
                        android:id="@+id/order"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:tint="@color/White"
                        android:background="@drawable/circular_two_colors_three"
                        app:srcCompat="@drawable/document" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order"

                        android:layout_marginTop="5dp"
                        android:text="@string/document" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/frameLayoutHelp"
         android:layout_marginTop="30dp"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:visibility="gone">

    </FrameLayout>
</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>